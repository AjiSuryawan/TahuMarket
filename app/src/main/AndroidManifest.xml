<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tahumarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Initial"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.AddQtyOrder"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".activity.OrderCreatActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.OrderActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ProdukActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.DasboardActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>