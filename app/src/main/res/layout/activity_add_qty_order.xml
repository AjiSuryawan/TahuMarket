<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddQtyOrder"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/divRemove"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:tint="@color/colorRed"
            android:src="@drawable/ic_remove_circle_black_24dp"/>
        <com.example.tahumarket.custom.CustomEditTextBold
            android:id="@+id/txtjumlah"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="#00000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="0"
            android:text="0"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="@dimen/_20ssp"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/divAdd"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:tint="@color/colorGreen"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_round_01"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/colorWhite"/>

        <com.example.tahumarket.custom.CustomTextViewLight
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/colorWhite"
            android:text="Submit"/>

    </LinearLayout>


