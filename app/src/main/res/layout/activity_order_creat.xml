<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderCreatActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.example.tahumarket.custom.CustomEditTextBold
                        android:id="@+id/etDateTime"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:hint="Date/Time"
                        android:textColor="#252525"
                        android:textStyle="bold"
                        android:inputType="textCapCharacters"
                        android:textSize="@dimen/_10ssp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <com.example.tahumarket.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorPrimary"
                            android:text="Nomor Nota"
                            android:textStyle="bold"/>

                        <com.example.tahumarket.custom.CustomEditTextBold
                            android:id="@+id/etId"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:background="#00000000"
                            android:gravity="top|left"
                            android:hint="....."
                            android:textColor="#252525"
                            android:textStyle="bold"
                            android:inputType="textCapCharacters"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <com.example.tahumarket.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorPrimary"
                            android:text="Nama Pemesan"
                            android:textStyle="bold"/>

                        <com.example.tahumarket.custom.CustomEditTextBold
                            android:id="@+id/etNamaPemesan"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:background="#00000000"
                            android:gravity="top|left"
                            android:hint="Masukkan nama pemesan"
                            android:textColor="#252525"
                            android:textStyle="bold"
                            android:inputType="textCapWords"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/cbDiskon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft= "-7dp"
                            android:text="Diskon ?"
                            android:checked="false"/>
                        <com.example.tahumarket.custom.CustomEditTextBold
                            android:id="@+id/etDiskon"
                            android:visibility="gone"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:background="#00000000"
                            android:gravity="top|left"
                            android:hint="Masukkan Diskon"
                            android:textColor="#252525"
                            android:textStyle="bold"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <com.example.tahumarket.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorPrimary"
                            android:text="PPN"
                            android:textStyle="bold"/>

                        <com.example.tahumarket.custom.CustomEditTextBold
                            android:id="@+id/etPPN"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:background="#00000000"
                            android:gravity="top|left"
                            android:hint="Masukkan PPN"
                            android:textColor="#252525"
                            android:textStyle="bold"
                            android:inputType="number"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp">
            <LinearLayout
                android:id="@+id/divSinkronData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@drawable/bg_round_01"
                android:backgroundTint="@color/colorAccent"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_black_24dp"
                    android:tint="@color/colorWhite"/>

                <com.example.tahumarket.custom.CustomTextViewLight
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/colorWhite"
                    android:text="Simpan Data"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_rectangle_03">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">
                    <!--                            <ImageView-->
                    <!--                                android:layout_width="wrap_content"-->
                    <!--                                android:layout_height="wrap_content"-->
                    <!--                                android:src="@drawable/ic_search_black_24dp"-->
                    <!--                                android:tint="@color/colorWhite"/>-->
                    <com.example.tahumarket.custom.CustomEditTextLight
                        android:id="@+id/etSearch"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:hint="Cari Produk"
                        android:textColorHint="@color/textHint"
                        android:textColor="@color/txtBlack"
                        android:singleLine="true"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/rectangle_round_right"
                    android:backgroundTint="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_black_24dp"
                        android:tint="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTambahOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>