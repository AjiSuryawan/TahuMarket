<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="@dimen/_92sdp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewMedium
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="....."
            android:textColor="@color/txtBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="@dimen/_92sdp"
            android:layout_height="wrap_content"
            android:text="PPN"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewMedium
            android:id="@+id/tvPPN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="....."
            android:textColor="@color/txtBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="@dimen/_92sdp"
            android:layout_height="wrap_content"
            android:text="Diskon"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewMedium
            android:id="@+id/tvDiskon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="....."
            android:textColor="@color/txtBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.tahumarket.custom.CustomTextViewBold
        android:layout_width="@dimen/_92sdp"
        android:layout_height="wrap_content"
        android:text="Yang Harus Dibayar"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
        <com.example.tahumarket.custom.CustomTextViewMedium
            android:id="@+id/tvGrandTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="....."
            android:textColor="@color/txtBlack"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.example.tahumarket.custom.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.example.tahumarket.custom.CustomTextViewQuicksand
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:textColor="@color/textHint"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <com.example.tahumarket.custom.CustomEditTextBold
                android:id="@+id/etPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="#00000000"
                android:gravity="top|left"
                android:hint="....."
                android:inputType="number"
                android:textColor="#252525"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/divSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_01"
        android:backgroundTint="@color/colorAccent"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/colorWhite"/>

        <com.example.tahumarket.custom.CustomTextViewLight
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/colorWhite"
            android:text="Simpan Data"/>

    </LinearLayout>

</LinearLayout>